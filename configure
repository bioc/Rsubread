#!/bin/sh

#cp src/Makevars.in src/Makevars

UNAME=`uname`

echo @@@@@ The operating system is $UNAME.

if test  $UNAME = "Linux" 
then
	# This is a Linux machine! 
	cp src/Makevars.Linux src/Makevars
elif test $UNAME = "FreeBSD"
then
	cp src/Makevars.FreeBSD src/Makevars
elif test $UNAME = "SunOS"
then
	cp src/Makevars.SunOS src/Makevars
else
	cp src/Makevars.MacOS src/Makevars
fi
